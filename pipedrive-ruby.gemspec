$:.push File.expand_path("../lib", __FILE__)
require "pipedrive-ruby/version"

Gem::Specification.new do |s|
  s.name        = "pipedrive-ruby"
  s.version     = Pipedrive::VERSION
  s.platform    = Gem::Platform::RUBY
  s.authors     = ["romanos"]
  s.email       = ["romanos@jargon.ai"]
  s.homepage    = "https://github.com/romanos/pipedrive-ruby"
  s.summary     = "Pipedrive API Client (Swagger Codegen)"
  s.description = "Autogenerated Pipedrive API Wrapper for Ruby"
  s.license     = "MIT"
  s.required_ruby_version = ">= 1.9"

  s.add_runtime_dependency 'typhoeus', '~> 1.0', '>= 1.0.1'
  s.add_runtime_dependency 'json', '~> 2.1', '>= 2.1.0'

  s.add_development_dependency 'rspec', '~> 3.6', '>= 3.6.0'
  s.add_development_dependency 'vcr', '~> 3.0', '>= 3.0.1'
  s.add_development_dependency 'webmock', '~> 1.24', '>= 1.24.3'
